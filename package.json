{
    "name"            : "goodprice",
    "description"     : "The forgotten shopping tool - using unit pricing is the best way for shoppers to save money on grocery shopping!",
    "version"         : "1.0.0",
    "author"          : {
        "name" : "Alan Tai"
    },
    "repository"      : {
        "type" : "git",
        "url"  : "git+https://github.com/ayltai/GoodPrice.git"
    },
    "bugs"            : {
        "url" : "https://github.com/ayltai/GoodPrice/issues"
    },
    "license"         : "MIT",
    "keywords"        : [
        "calculator",
        "price",
        "shopping"
    ],
    "main"            : "node_modules/expo/AppEntry.js",
    "scripts"         : {
        "build"   : "eas build",
        "eject"   : "expo eject",
        "start"   : "expo start",
        "android" : "expo start --android",
        "ios"     : "expo start --ios",
        "web"     : "expo start --web",
        "test"    : "jest",
        "update"  : "npx npm-check-updates"
    },
    "dependencies"    : {
        "@expo/vector-icons"             : "^13.0.0",
        "@react-navigation/native"       : "^6.0.10",
        "@react-navigation/native-stack" : "^6.6.2",
        "@reduxjs/toolkit"               : "^1.8.2",
        "convert"                        : "^4.5.0",
        "expo"                           : "^45.0.5",
        "expo-constants"                 : "^13.1.1",
        "expo-localization"              : "^13.0.0",
        "expo-splash-screen"             : "^0.16.0",
        "i18next"                        : "^21.8.9",
        "money-js"                       : "^1.0.2",
        "native-base"                    : "^3.4.6",
        "react"                          : "~17.0.2",
        "react-dom"                      : "~17.0.2",
        "react-i18next"                  : "^11.17.1",
        "react-native"                   : "^0.68.2",
        "react-native-safe-area-context" : "^4.3.1",
        "react-native-screens"           : "^3.13.1",
        "react-native-svg"               : "^12.3.0",
        "react-native-swipe-list-view"   : "^3.2.9",
        "react-native-web"               : "^0.18.2",
        "react-redux"                    : "~7.2.8"
    },
    "devDependencies" : {
        "@babel/core"                      : "^7.18.5",
        "@babel/runtime"                   : "^7.18.3",
        "@testing-library/jest-native"     : "^4.0.5",
        "@testing-library/react-native"    : "^9.1.0",
        "@types/jest"                      : "~27.5.2",
        "@types/react"                     : "~17.0.45",
        "@types/react-native"              : "^0.67.8",
        "@types/react-test-renderer"       : "~17.0.2",
        "@typescript-eslint/eslint-plugin" : "^5.28.0",
        "@typescript-eslint/parser"        : "^5.28.0",
        "babel-jest"                       : "~27.5.1",
        "eslint"                           : "^8.17.0",
        "eslint-plugin-import"             : "^2.26.0",
        "eslint-plugin-jest"               : "^26.5.3",
        "eslint-plugin-prefer-arrow"       : "^1.2.3",
        "eslint-plugin-react"              : "^7.30.0",
        "eslint-plugin-react-hooks"        : "^4.5.0",
        "eslint-plugin-unicorn"            : "^42.0.0",
        "react-test-renderer"              : "~17.0.2",
        "jest"                             : "~29.4.0",
        "jest-expo"                        : "^45.0.1",
        "jest-fetch-mock"                  : "^3.0.3",
        "typescript"                       : "^4.7.3"
    },
    "jest"            : {
        "collectCoverage"         : true,
        "collectCoverageFrom"     : [
            "./src/**/*.{js,jsx,ts,tsx}"
        ],
        "testPathIgnorePatterns" : [
            "<rootDir>/src/utils/test.tsx"
        ],
        "preset"                  : "jest-expo",
        "setupFilesAfterEnv"      : [
            "./jest.setup.js"
        ],
        "transformIgnorePatterns" : [
            "node_modules/(?!(@react-native|@react-navigation|react-native|@expo/.*|expo|expo-.*|native-base|react-native-swipe-list-view|react-native-svg)/)"
        ]
    }
}
